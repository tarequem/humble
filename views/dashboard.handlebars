<section>
  <h2>Create New Post</h2>

  <form id="post-form" class="new-post-form" enctype="multipart/form-data" method="POST" action="/api/posts">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" />
    </div>
    <div>
      <label for="image">Upload a photo</label>
      <input type="file" id="image" name="image" accept=".jpg,.jpeg,.png">
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <div class="card" style="width: 30rem; margin: 20px">
      <img class="card-img-top card-upload" src="{{post.image}}" alt="Card image cap">
      <li>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Delete Post</a>
      </li>
      <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <p class="card-text">{{post.vote_count}} point(s) by {{post.user.username}} on
        {{post.created_at}}</p>
        <a href="/post/{{post.id}}" class="btn btn-primary">{{post.comments.length}} comment(s)</a>
      </div>
    </div>
    {{/each}}
  </ol>
</section>
{{/if}}

