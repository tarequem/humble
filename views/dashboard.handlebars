<section>
  <h2>Create New Post</h2>

  <form id="post-form" class="new-post-form" enctype="multipart/form-data" method="POST" action="/api/posts">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" />
    </div>
    <div>
      <label for="image">Upload a photo</label>
      <input type="file" id="image" name="image" accept=".jpg,.jpeg,.png">
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      <img src="{{post.image}}">
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>